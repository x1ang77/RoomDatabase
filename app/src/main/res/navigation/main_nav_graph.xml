<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/to_home_fragment"
        app:destination="@+id/homeFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.joel.todolistfragments.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <action
            android:id="@+id/action_home_to_addItem"
            app:destination="@id/addItemFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.joel.todolistfragments.ui.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="long" />
        <action
            android:id="@+id/action_details_to_imageGallery"
            app:destination="@id/imageGalleryFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_details_to_editItem"
            app:destination="@id/editItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.joel.todolistfragments.ui.AddItemFragment"
        android:label="Add Item"
        tools:layout="@layout/fragment_add_item" />
    <fragment
        android:id="@+id/imageGalleryFragment"
        android:name="com.joel.todolistfragments.ui.ImageGalleryFragment"
        android:label="Image Gallery"
        tools:layout="@layout/fragment_image_gallery" />
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.joel.todolistfragments.ui.EditItemFragment"
        android:label="Edit Item">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.joel.todolistfragments.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>